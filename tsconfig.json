{
  "compilerOptions": {
    "importHelpers": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "target": "es2022",
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "nodenext",
    "strictNullChecks": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "exclude": ["dist",
    "jest.config.ts", "tsup.config.ts"
  ]
}
