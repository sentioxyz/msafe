{
  "compilerOptions": {
    "alwaysStrict": true,
    "sourceMap": true,
    "target": "esnext",
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "exclude": ["dist"]
}
